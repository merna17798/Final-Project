#include "uart.h"
#include "external_eeprom.h"
#include <avr/io.h>
//#define READY 255
//#define r 100
enum READY{
	READY1=10,
	READY2=20,
	READY3=30,
	READY4=40
};
static void Recive_Write_Memory(enum READY R){
	uint8 x[7],i;
	while(UART_recieveByte()!=R){};
	for(i=0;i<5;i++){
		UART_sendByte(R);
		x[i]=UART_recieveByte();
		EEPROM_writeByte((0x0000|i), x[i]);
		_delay_ms(100);
	}
}
static void Read_Send_Meomory(enum READY R){
	uint8 x[7],i;
	while(UART_recieveByte()!=R){};
	for(i=0;i<5;i++){
		UART_sendByte(R);
		EEPROM_readByte((0x0000|i), &x[i]);
		UART_sendByte(x[i]);
		_delay_ms(100);
	}
}
int main(){
	//uint8 sent_pass[7];
	//uint8 x[7],i;
	/* Init EEPROM */
	EEPROM_init();
	UART_init();
	if(UART_recieveByte()==READY4){
		|=(1<<0);


	}
	Recive_Write_Memory(READY1);

	while(1){
		Read_Send_Meomory(READY2);
		Recive_Write_Memory(READY3);
		Recive_Write_Memory(READY1);
	}

	return 0;
}
